<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/img_menu_background">

<View
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="50dp"
    android:layout_centerHorizontal="true">

    <Button
        android:id="@+id/menu_BTN_buttons_slow"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#4CAF50"
        android:text="Buttons - Slow"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/menu_BTN_buttons_fast"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#388E3C"
        android:text="Buttons - Fast"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/menu_BTN_sensors"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#2E7D32"
        android:text="Sensors"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/menu_BTN_top10"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:backgroundTint="#1B5E20"
        android:text="Top 10 Scores"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>
</RelativeLayout>